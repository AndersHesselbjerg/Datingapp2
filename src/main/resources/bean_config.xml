<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="connector" class="com.example.demo.data.Connector" />
    <bean id="userList" class="com.example.demo.domain.UserList"/>
    <bean id="userFactory" class="com.example.demo.data.UserFactory"/>
    <bean id="userMapper" class="com.example.demo.data.UserMapper">
        <constructor-arg index="0" ref="connector"/>
        <constructor-arg index="1" ref="userFactory"/>
    </bean>
    <bean id="userController" class="com.example.demo.presentation.UserController">
        <constructor-arg index="0" ref="userMapper"/>
    </bean>
    <bean id="chatList" class="com.example.demo.domain.ChatList"/>
    <bean id="chatFactory" class="com.example.demo.data.ChatFactory"/>
    <bean id="chatMapper" class="com.example.demo.data.ChatMapper">
        <constructor-arg index="0" ref="connector"/>
        <constructor-arg index="1" ref="chatFactory"/>
    </bean>
    <bean id="chatController" class="com.example.demo.presentation.ChatController">
        <constructor-arg index="0" ref="chatMapper"/>
    </bean>
</beans>