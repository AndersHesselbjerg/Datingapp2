<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="connector" class="com.example.demo.data.Connector" />
    <bean id="userList" class="com.example.demo.domain.UserList"/>
    <bean id="userFactory" class="com.example.demo.data.UserFactory"/>
    <bean id="userMapper" class="com.example.demo.data.UserMapper">
        <constructor-arg index="0" ref="connector"/>
        <constructor-arg index="1" ref="userFactory"/>
    </bean>
    <bean id="userController" class="com.example.demo.presentation.UserController">
        <constructor-arg index="0" ref="userMapper"/>
    </bean>
    <bean id="chatList" class="com.example.demo.domain.ChatList"/>
    <bean id="chatFactory" class="com.example.demo.data.ChatFactory"/>
    <bean id="messageFactory" class="com.example.demo.data.MessageFactory">
        <constructor-arg index="0" ref="userMapper"/>
    </bean>
    <bean id="chatMapper" class="com.example.demo.data.ChatMapper">
        <constructor-arg index="0" ref="connector"/>
        <constructor-arg index="1" ref="chatFactory"/>
        <constructor-arg index="2" ref="messageFactory"/>
        <constructor-arg index="3" ref="userFactory"/>
    </bean>
    <bean id="chatController" class="com.example.demo.presentation.ChatController">
        <constructor-arg index="0" ref="chatMapper"/>
    </bean>
    <bean id="loginController" class="com.example.demo.presentation.LoginController">
        <constructor-arg index="0" ref="userMapper"/>
    </bean>
    <bean id="candidateMapper" class="com.example.demo.data.CandidateMapper">
            <constructor-arg index="0" ref="connector"/>
            <constructor-arg index="1" ref="candidateFactory"/>
    </bean>
    <bean id="candidateList" class="com.example.demo.domain.CandidateList"/>
    <bean id="candidateController" class="com.example.demo.presentation.CandidateController">
        <constructor-arg index="0" ref="candidateMapper"/>
    </bean>
    <bean id="candidateFactory" class="com.example.demo.data.CandidateFactory"/>

</beans>